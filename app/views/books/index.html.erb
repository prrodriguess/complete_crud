<h1>Lista de livros</h1>
<%= link_to 'New Book', new_book_path %>
<ul>
  <%= @books.each do |book| %>
    <li>
      <%= link_to book.title, book_path(book) %> - <%= book.author %>
      (<%= link_to 'Editar', edit_book_path(book) %> | <%= link_to 'Excluir', book, method: :delete, data: { confirm: 'Are you sure ?' } %>)
    </li>
  <% end %>
</ul>